{
  "name": "Save to Polar - PDF, Web, and Document Annotation",
  "description": "A powerful offline browser for for managing PDF, web content, books, and notes with tagging, annotations, and highlighting.",
  "version": "1.1.0",
  "background": {
    "scripts": [
      "lib/browser-polyfill.js",
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "<all_urls>",
    "storage",
    "tabs",
    "bookmarks",
    "cookies",
    "history",
    "http://localapp.getpolarized.io:8500/rest/v1/capture/trigger"
  ],
  "browser_action": {
    "default_title": "Click to share with Polar",
    "default_popup": "./popup.html"
  },
  "applications": {
    "gecko": {
      "id": "admin@getpolarized.io"
    }
  },
  "icons": {
    "16": "./img/icon-16.png",
    "32": "./img/icon-32.png",
    "48": "./img/icon-48.png",
    "128": "./img/icon-128.png"
  },
  "manifest_version": 2
}