{
  "name": "Save to Polar",
  "description": "A powerful offline browser for for managing PDF, web content, books, and notes with tagging, annotations, and highlighting.",
  "version": "1.0",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
    "storage",
    "tabs",
    "bookmarks",
    "cookies",
    "history",
    "http://localapp.getpolarized.io:8500/rest/v1/capture/trigger"
  ],
  "browser_action": {
    "name": "Click to share with Polar",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "manifest_version": 2
}


